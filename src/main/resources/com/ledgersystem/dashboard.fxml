<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ledgersystem.controllers.DashboardController" spacing="10">

    <MenuBar>
        <Menu text="File">
            <MenuItem text="Logout" onAction="#handleLogout"/>
        </Menu>
    </MenuBar>

    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <Label text="Balance: $" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label fx:id="balanceLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Savings: $" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Label fx:id="savingsLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Loan: $" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Label fx:id="loanLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Debit" onAction="#handleDebit"/>
        <Button text="Credit" onAction="#handleCredit"/>
        <Button text="History" onAction="#handleHistory"/>
        <Button text="Savings" onAction="#handleSavings"/>
        <Button text="Loan" onAction="#handleLoan"/>
        <Button text="Interest Calculator" onAction="#handleInterest"/>
    </HBox>

    <TableView fx:id="transactionTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn text="Date" fx:id="dateColumn"/>
            <TableColumn text="Description" fx:id="descriptionColumn"/>
            <TableColumn text="Debit" fx:id="debitColumn"/>
            <TableColumn text="Credit" fx:id="creditColumn"/>
            <TableColumn text="Balance" fx:id="balanceColumn"/>
        </columns>
    </TableView>
</VBox>